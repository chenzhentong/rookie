<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="per.wkz.rookie.dao.GoodsDao">

    <insert id="addGoods"  parameterType="Goods">

        insert into goods(name,weight)
        values(#{name},#{weight})
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <select id="getGoodsById" resultMap="GoodsResultMap">
        select *
        from goods
        where id = #{id}
        limit 1
    </select>

    <resultMap id="GoodsResultMap" type="Goods">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
<!--        <result column="stock" property="stock" jdbcType="INTEGER"/>-->
        <result column="weight" property="weight" jdbcType="DOUBLE"/>
<!--        <result column="personal" property="personal" jdbcType="TINYINT"/>-->
        <result column="createDate" property="createDate" jdbcType="TIMESTAMP"/>
        <result column="updateDate" property="updateDate" jdbcType="TIMESTAMP"/>
<!--        <association property="seller" column="userId" select="per.wkz.rookie.dao.UserDao.getUserById"/>-->
    </resultMap>

</mapper>