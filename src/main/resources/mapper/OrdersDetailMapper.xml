<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="per.wkz.rookie.dao.OrdersDetailDao">

    <insert id="addOrdersDetail" parameterType="OrdersDetail" >
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into ordersDetail(goodsId,num,ordersId) values(#{goodsId},#{num},#{ordersId})

    </insert>

    <select id="getOrdersDetailById" resultMap="OrdersDetailResultMap">
        select * from ordersDetail where id = #{id}
    </select>
    <resultMap id="OrdersDetailResultMap" type="OrdersDetail">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="nums" property="num" jdbcType="INTEGER"/>
        <association property="goods" column="goodsId" select="per.wkz.rookie.dao.GoodsDao.getGoodsById"/>
<!--        <association property=""/>-->
    </resultMap>

</mapper>